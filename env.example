# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/posutka

# Environment
NODE_ENV=development

# gRPC Configuration
OPS_GRPC_HOST=localhost
OPS_GRPC_PORT=4103

# Frontend URL (для ссылок в уведомлениях)
# ⚠️ ВАЖНО: Telegram не принимает localhost URL в кнопках!
# Для локальной разработки используйте ngrok: https://ngrok.com/
# Пример: FRONTEND_URL=https://your-subdomain.ngrok-free.dev
# Development (с ngrok): https://your-subdomain.ngrok-free.dev
# Production: https://posutka-backoffice.vercel.app (или ваш продакшн URL)
FRONTEND_URL=http://localhost:3000

# Telegram Bot
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_USE_MINIAPP=false
TELEGRAM_POLLING=false

# Hive Configuration (опционально)
# Получите эти значения из вашего Hive проекта
HIVE_TOKEN=your_hive_token_here
HIVE_TARGET=your_org/your_project/your_target

# Пример:
# HIVE_TOKEN=hck_1234567890abcdef
# HIVE_TARGET=myorg/myproject/development
