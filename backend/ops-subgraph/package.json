{
  "name": "ops-subgraph",
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "tsx --watch src/server.ts",
    "build": "tsc -p tsconfig.json",
    "start": "tsx src/server.ts",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "schema:publish": "hive schema:publish --registry.accessToken \"$HIVE_TOKEN\" --target \"$HIVE_TARGET\" --service ops --url http://localhost:4003/graphql src/schema/index.gql",
    "dev:build": "pnpm build && node --watch dist/backend/ops-subgraph/src/server.js"
  },
  "dependencies": {
    "@apollo/subgraph": "^2.8.0",
    "@graphql-tools/schema": "^10.0.0",
    "@grpc/grpc-js": "^1.9.0",
    "@grpc/proto-loader": "^0.7.0",
    "@prisma/client": "^5.18.0",
    "@repo/datalayer": "workspace:*",
    "@repo/datalayer-prisma": "workspace:*",
    "@repo/grpc-sdk": "workspace:*",
    "@repo/shared-logger": "workspace:*",
    "graphql": "^16.9.0",
    "graphql-tag": "^2.12.6",
    "graphql-yoga": "^5.6.0",
    "nice-grpc": "^2.1.12",
    "pino": "^8.17.2",
    "pino-pretty": "^10.3.1"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "tsx": "^4.20.5",
    "typescript": "^5.5.0",
    "vitest": "^2.0.0"
  }
}