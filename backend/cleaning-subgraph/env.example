# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/posutka

# Server Port
PORT=4010

# Frontend URL (для ссылок в уведомлениях)
# ⚠️ ВАЖНО: Telegram не принимает localhost URL в кнопках!
# Для локальной разработки используйте ngrok: https://ngrok.com/
# Пример: FRONTEND_URL=https://your-subdomain.ngrok-free.dev
# Development (с ngrok): https://your-subdomain.ngrok-free.dev
# Production: https://posutka-backoffice.vercel.app (или ваш продакшн URL)
FRONTEND_URL=http://localhost:3000

# Notifications Service (gRPC) - LEGACY (будет заменено на Events)
NOTIFICATIONS_GRPC_HOST=localhost
NOTIFICATIONS_GRPC_PORT=4111

# Events Service (gRPC) - NEW! Event Bus
EVENTS_GRPC_HOST=localhost
EVENTS_GRPC_PORT=4113

# Logging
LOG_LEVEL=info
NODE_ENV=development

# MinIO Storage Configuration
# 
# Если MinIO добавлен как addon (например, в Northflank), credentials обычно доступны автоматически
# через переменные окружения, которые инжектятся в приложение.
# 
# Endpoint MinIO (URL или host:port)
# MINIO_ENDPOINT=minio.posutka--nxf2xdqnnrcn.addon.code.run:9000
# Или используйте MINIO_URL (приоритет выше чем MINIO_ENDPOINT)
MINIO_URL=https://minio.posutka--nxf2xdqnnrcn.addon.code.run:9000
# 
# Access Key для MinIO (если не указан автоматически addon'ом)
# Поддерживаются варианты: MINIO_ACCESS_KEY, MINIO_ACCESS_KEY_ID, MINIO_ROOT_USER, MINIO_USERNAME
# MINIO_ACCESS_KEY=your-access-key
# 
# Secret Key для MinIO (если не указан автоматически addon'ом)
# Поддерживаются варианты: MINIO_SECRET_KEY, MINIO_SECRET_ACCESS_KEY, MINIO_ROOT_PASSWORD, MINIO_PASSWORD
# MINIO_SECRET_KEY=your-secret-key
# 
# Bucket для хранения файлов
MINIO_BUCKET=posutka
# 
# Использовать SSL (true/false, по умолчанию определяется автоматически из URL)
# MINIO_USE_SSL=true
# 
# Публичный URL для доступа к файлам (опционально)
# Если не указан, будут использоваться presigned URLs
# MINIO_PUBLIC_URL=https://cdn.example.com
# 
# Регион (опционально)
# MINIO_REGION=us-east-1

