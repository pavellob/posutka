{
  "name": "@repo/grpc-sdk",
  "version": "0.1.0",
  "files": [
    "dist",
    "src"
  ],
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "scripts": {
    "build": "pnpm run generate && tsup",
    "dev": "tsup --watch",
    "clean": "rimraf dist src/generated",
    "generate": "pnpm proto:generate",
    "proto:generate": "pnpm proto:clean && buf generate --template buf.gen.node.yaml",
    "proto:clean": "rimraf src/generated",
    "typecheck": "tsc --noEmit",
    "prebuild": "pnpm run clean"
  },
  "dependencies": {
    "@grpc/grpc-js": "^1.9.0",
    "@repo/shared-logger": "workspace:*",
    "google-protobuf": "^3.21.2",
    "long": "^5.3.2",
    "nice-grpc": "^2.1.12",
    "nice-grpc-common": "^2.0.2",
    "protobufjs": "^7.2.5"
  },
  "devDependencies": {
    "@bufbuild/buf": "^1.50.0",
    "@types/long": "^5.0.0",
    "@types/node": "^22.0.0",
    "google-proto-files": "^5.0.1",
    "rimraf": "^5.0.7",
    "ts-proto": "^1.181.2",
    "tsup": "^8.5.0",
    "typescript": "^5.5.0"
  },
  "peerDependencies": {
    "pino": "^9.7.0"
  }
}