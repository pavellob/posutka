{
  "name": "posutka-monorepo",
  "private": true,
  "packageManager": "pnpm@10.15.1",
  "scripts": {
    "build": "turbo build",
    "dev:graph": "turbo run dev --filter='*-subgraph' --parallel",
    "dev:gateway": " turbo run gateway --filter=gateway-mesh",
    "mesh:compose": "turbo mesh:compose",
    "lint": "turbo lint",
    "typecheck": "turbo typecheck",
    "test": "turbo test",
    "migrate": "pnpm -C packages/datalayer-prisma prisma migrate dev",
    "generate": "pnpm -C packages/datalayer-prisma prisma generate",
    "start:all": "run-s start:subgraphs wait:subgraphs mesh:compose start:gateway",
    "start:dev": "./scripts/start-dev.sh",
    "start:subgraphs": "turbo start --filter='*-subgraph' --parallel",
    "wait:subgraphs": "./scripts/wait-for-subgraphs.sh",
    "start:gateway": "turbo gateway:start",
    "start:mesh": "turbo mesh:compose && turbo gateway:start",
    "build:prod": "./scripts/build-prod.sh",
    "build:docker": "./scripts/build-docker.sh",
    "build:test": "./scripts/build-and-test.sh",
    "test:setup": "./scripts/test-setup.sh"
  },
  "devDependencies": {
    "@graphql-mesh/compose-cli": "^1.4.17",
    "graphql-yoga": "^5.15.2",
    "turbo": "^2.0.0",
    "typescript": "^5.5.0"
  },
  "dependencies": {
    "npm-run-all": "^4.1.5"
  }
}
