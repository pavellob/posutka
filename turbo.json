{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": [
    "DATABASE_URL",
    "NODE_ENV",
    "FRONTEND_URL",
    "TELEGRAM_BOT_TOKEN",
    "TELEGRAM_USE_MINIAPP",
    "TELEGRAM_POLLING",
    "NOTIFICATIONS_GRPC_HOST",
    "NOTIFICATIONS_GRPC_PORT",
    "CLEANING_GRPC_HOST",
    "CLEANING_GRPC_PORT",
    "PORT",
    "GRPC_PORT",
    "GRPC_HOST",
    "WS_PORT",
    "OPS_GRPC_HOST",
    "OPS_GRPC_PORT"
  ],
  "tasks": {
    "lint": { "outputs": [] },
    "typecheck": { "dependsOn": ["^typecheck"], "outputs": [] },
    "build": { "dependsOn": ["^build"], "outputs": ["dist/**", ".next/**"] },
    "test": { "dependsOn": ["^build"], "outputs": [] },
    "dev": { "cache": false },
    "start": { "cache": false },
    
    // Запуск Mesh после сабграфов
    "gateway": {
      "dependsOn": ["^dev"],
      "cache": false
    },
    
    // Legacy tasks (можно удалить после тестирования)
    "mesh:compose": { "cache": false },
    "gateway:start": { "cache": false }
  }
}