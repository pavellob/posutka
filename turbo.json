{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "lint": { "outputs": [] },
    "typecheck": { "dependsOn": ["^typecheck"], "outputs": [] },
    "build": { "dependsOn": ["^build"], "outputs": ["dist/**", ".next/**"] },
    "test": { "dependsOn": ["^build"], "outputs": [] },
    "dev": { "cache": false },
    "start": { "cache": false },
    
    // Запуск Mesh после сабграфов
    "gateway": {
      "dependsOn": ["^dev"],
      "cache": false
    },
    
    // Legacy tasks (можно удалить после тестирования)
    "mesh:compose": { "cache": false },
    "gateway:start": { "cache": false }
  }
}